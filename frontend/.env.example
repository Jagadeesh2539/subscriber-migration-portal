# ===========================================
# Subscriber Migration Portal - Frontend Config
# ===========================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# Authentication
REACT_APP_JWT_STORAGE_KEY=token
REACT_APP_USER_STORAGE_KEY=user
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000

# Application Settings
REACT_APP_APP_NAME=Subscriber Migration Portal
REACT_APP_APP_VERSION=3.0.0
REACT_APP_COMPANY_NAME=Enterprise Corp

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_QUERY_DEVTOOLS=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_MOCK_API=false

# Performance Settings
REACT_APP_CACHE_DURATION=300000
REACT_APP_STALE_TIME=60000
REACT_APP_PREFETCH_ENABLED=true
REACT_APP_LAZY_LOADING=true

# UI/UX Settings
REACT_APP_DEFAULT_THEME=light
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ITEMS_PER_PAGE=50
REACT_APP_DEBOUNCE_DELAY=300

# Monitoring & Analytics
REACT_APP_SENTRY_DSN=
REACT_APP_GA_TRACKING_ID=
REACT_APP_HOTJAR_ID=
REACT_APP_ENABLE_ERROR_REPORTING=true

# Security Settings
REACT_APP_CSP_ENABLED=true
REACT_APP_HTTPS_ONLY=false
REACT_APP_SECURE_COOKIES=false

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.csv,.json,.xlsx
REACT_APP_CHUNK_SIZE=1048576

# Notification Settings
REACT_APP_TOAST_DURATION=4000
REACT_APP_NOTIFICATION_POSITION=top-right
REACT_APP_ENABLE_SOUND=false

# Accessibility
REACT_APP_HIGH_CONTRAST_MODE=false
REACT_APP_KEYBOARD_NAVIGATION=true
REACT_APP_SCREEN_READER_SUPPORT=true

# Development URLs (for different environments)
# Development
# REACT_APP_API_URL=http://localhost:5000/api

# Staging
# REACT_APP_API_URL=https://staging-api.yourdomain.com/api

# Production
# REACT_APP_API_URL=https://api.yourdomain.com/api